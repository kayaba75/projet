{% extends 'base.html.twig' %}

{% block title %}
	{{ home.titre }}
{% endblock %}

{% block body %}
	<div class="container py-4 py-xl-5 mb-5 mt-5 min-vh-100">
  <h1>Calcul de la Retraite en France</h1>
        
        <form id="retraiteForm">
            <div class="form-group">
                <label for="revenu_annuel_moyen">Revenu Annuel Moyen :</label>
                <input type="number" class="form-control" id="revenu_annuel_moyen" required>
            </div>
            
            <div class="form-group">
                <label for="annee_naissance">Année de Naissance :</label>
                <input type="number" class="form-control" id="annee_naissance" required>
            </div>

            <div class="form-group">
                <label for="annees_travail">Années de Travail :</label>
                <input type="number" class="form-control" id="annees_travail" required>
            </div>
            
            <button type="button" class="btn btn-primary" onclick="calculerRetraite()">Calculer</button>
        </form>

        <div id="resultat" class="mt-3"></div>

	</div>

{% endblock %}
