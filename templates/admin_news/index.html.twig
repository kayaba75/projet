{% extends 'base-backend.html.twig' %}

{% block title %}News index{% endblock %}

{% block body %}
    <h1>News index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>ImageName</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for news in news %}
            <tr>
                <td>{{ news.id }}</td>
                <td>{{ news.titre }}</td>
                <td>{{ news.description }}</td>
                <td>{{ news.createdAt ? news.createdAt|date('d-m-Y H:i:s') : '' }}</td>
                <td>{{ news.updatedAt ? news.updatedAt|date('d-m-Y H:i:s') : '' }}</td>
                <td>{{ news.imageName }}</td>
                <td>
                    <a href="{{ path('app_admin_news_show', {'id': news.id}) }}">show</a>
                    <a href="{{ path('app_admin_news_edit', {'id': news.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_news_new') }}">Create new</a>
{% endblock %}
