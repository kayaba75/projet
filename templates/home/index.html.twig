{% extends 'base.html.twig' %}

{% block title %} {{ home.titre }} {% endblock %}

{% block body %}


<div class="container py-4 py-xl-5">
        <div class="row gy-4 row-cols-1 row-cols-md-1 row-cols-xl-3">
        {% for service in services %}
            <div class="col">
                <div class="card" data-bss-hover-animate="pulse">
                    <div class="card-body p-4">
                        <div class="bs-icon-md bs-icon-rounded mb-3 bs-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" viewBox="0 0 16 16" class="bi bi-{{ service.iconName}} fs-1 text-dark">
                        <i class="fa-solid fa-{{ service.iconName }} fa-2xl" style="color: #000000"></i> </svg></div>
                        <h4 class="text-uppercase d-flex justify-content-center card-title">{{ service.titre }}</h4>
                        <p class="card-text">{{ service.description }}</p>
                    </div>
                </div>
            </div>
            {% endfor %}

            
            
        </div>
    </div>
{% include '@templates/front_common/_top-section.html.twig' %}
{% include '@templates/front_common/_news.html.twig' %}
{% include '@templates/front_common/_partenaires.html.twig' %}
{% endblock %} 
