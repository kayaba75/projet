{% extends 'base-backend.html.twig' %}

{% block title %}Les Services{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center">
    <h1>Nos Services</h1>

        <a href="{{ path('app_admin_services_new') }}" class="btn btn-success">Nouveau</a>


    </div>

    <table class="table table-index table-striped table-responsive">
        <thead>
            <tr>
                {# <th>Id</th> #}
                <th>Titre</th>
                <th>Description</th>
                <th>Icon</th>
                <th>Actif</th>
                {# <th>UpdatedAt</th> #}
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for service in services %}
            <tr>
                {# <td>{{ service.id }}</td> #}
                <td>{{ service.titre }}</td>
                <td>{{ service.description }}</td>
                <td>
                <svg xmlns="http://www.w3.org/2000/svg" width="0.1em" height="0.1em" fill="currentColor" viewBox="0 0 16 16" class="bi bi-{{ service.iconName}} fs-1 text-dark">
                <i class="fa-solid fa-{{ service.iconName }} fa-2xl " style="color: #000000;"></i> </svg>
                <td>{{ service.isActive ? 'Oui' : 'Non' }}</td>
                {# <td>{{ service.updatedAt ? service.updatedAt|date('Y-m-d H:i:s') : '' }}</td> #}
                <td>
                {% include "admin_services/_delete_form.html.twig" %}
                    <a href="{{ path('app_admin_services_show', {'id': service.id}) }}"class="btn btn-dark w-50 m-1">Voir</i></a>
                    <a href="{{ path('app_admin_services_edit', {'id': service.id}) }}"class="btn btn-success w-50 m-1">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
