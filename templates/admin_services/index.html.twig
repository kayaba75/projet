{% extends 'base-backend.html.twig' %}

{% block title %}Les Services{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center">
    <h1>Nos Services</h1>

        <a href="{{ path('app_admin_services_new') }}" class="btn btn-success">Nouveau</a>


    </div>

    <table class="table table-index table-striped table-responsive">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Icon</th>
                <th>Actif</th>
                {# <th>UpdatedAt</th> #}
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for service in services %}
            <tr>
                <td>{{ service.id }}</td>
                <td>{{ service.titre }}</td>
                <td>{{ service.description }}</td>
                <td>
                    {{ service.iconName }} </td>
                <td>{{ service.isActive ? 'Oui' : 'Non' }}</td>
                {# <td>{{ service.updatedAt ? service.updatedAt|date('Y-m-d H:i:s') : '' }}</td> #}
                <td>
                {% include "admin_services/_delete_form.html.twig" %}
                    <a href="{{ path('app_admin_services_show', {'id': service.id}) }}"class="btn btn-dark"><i class="align-middle" data-feather="eye"></i></a>
                    <a href="{{ path('app_admin_services_edit', {'id': service.id}) }}"class="btn btn-success"><i class="align-middle" data-feather="edit-2"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
