{% extends 'base-backend.html.twig' %}

{% block title %}Services{% endblock %}

{% block body %}
    <h1>Services</h1>

    <table class="table table-index table-striped table-responsive">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ service.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ service.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ service.description }}</td>
            </tr>
            <tr>
                <th>IconName</th>
                <td>{{ service.iconName }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ service.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ service.updatedAt ? service.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_services_index') }}">back to list</a>

    <a href="{{ path('app_admin_services_edit', {'id': service.id}) }}">edit</a>

    {{ include('admin_services/_delete_form.html.twig') }}
{% endblock %}
