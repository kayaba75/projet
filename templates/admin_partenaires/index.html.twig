{% extends 'base-backend.html.twig' %}

{% block title %}Partenaires index{% endblock %}

{% block body %}
    <h1>Partenaires index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>ImageName</th>
                <th>IsActive</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for partenaire in partenaires %}
            <tr>
                <td>{{ partenaire.id }}</td>
                <td>{{ partenaire.titre }}</td>
                <td>{{ partenaire.imageName }}</td>
                <td>{{ partenaire.isActive ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_admin_partenaires_show', {'id': partenaire.id}) }}">show</a>
                    <a href="{{ path('app_admin_partenaires_edit', {'id': partenaire.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_partenaires_new') }}">Create new</a>
{% endblock %}
