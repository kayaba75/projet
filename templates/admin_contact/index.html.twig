{% extends 'base-backend.html.twig' %}

{% block title %}Messages{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center">

    <h1>Messages</h1>
        <a href="{{ path('app_admin_contact_new') }}" class="btn btn-success">Nouveau</a>
    </div>

    <table class="table table-index table-striped table-responsive">
        <thead>
            <tr>
                {# <th>Id</th> #}
                <th>Adresse email</th>
                <th>Sujet</th>
                <th>Message</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr>
                {# <td>{{ contact.id }}</td> #}
                <td>{{ contact.email }}</td>
                <td>{{ contact.sujet }}</td>
                <td>{{ contact.message }}</td>
                <td>
                {% include "admin_contact/_delete_form.html.twig" %}

                    <a href="{{ path('app_admin_contact_show', {'id': contact.id}) }}" class="btn btn-dark w-100 m-1">Voir</i></a>
                    <a href="{{ path('app_admin_contact_edit', {'id': contact.id}) }}" class="btn btn-success w-100 m-1">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun message</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
